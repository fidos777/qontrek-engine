{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://qontrek.io/schemas/widgets/pipeline-board.json",
  "title": "Pipeline Board Widget Schema",
  "description": "Kanban-style pipeline view with drag-and-drop support for ChatGPT Apps",
  "type": "object",
  "required": ["type", "schemaVersion", "title", "columns", "cardTemplate"],
  "properties": {
    "type": {
      "const": "pipeline_board",
      "description": "Widget type identifier"
    },
    "schemaVersion": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "default": "1.0.0"
    },
    "title": {
      "type": "string",
      "description": "Widget title"
    },
    "subtitle": {
      "type": "string"
    },
    "columns": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "title", "items"],
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique column identifier"
          },
          "title": {
            "type": "string",
            "description": "Column header"
          },
          "items": {
            "oneOf": [
              { "type": "string" },
              { "$ref": "#/$defs/dataBinding" }
            ],
            "description": "Path to items array for this column"
          },
          "styling": { "$ref": "#/$defs/styleHints" },
          "maxVisible": {
            "type": "integer",
            "minimum": 1,
            "description": "Max items before 'Show more'"
          },
          "aggregate": {
            "type": "object",
            "properties": {
              "path": {
                "oneOf": [
                  { "type": "string" },
                  { "$ref": "#/$defs/dataBinding" }
                ]
              },
              "format": {
                "type": "string",
                "enum": ["count", "sum", "currency"]
              },
              "label": { "type": "string" }
            },
            "description": "Aggregate value in column header"
          }
        }
      },
      "description": "Pipeline columns configuration"
    },
    "cardTemplate": {
      "type": "object",
      "required": ["title"],
      "properties": {
        "title": {
          "oneOf": [
            { "type": "string" },
            { "$ref": "#/$defs/dataBinding" }
          ],
          "description": "Card title field"
        },
        "subtitle": {
          "oneOf": [
            { "type": "string" },
            { "$ref": "#/$defs/dataBinding" }
          ],
          "description": "Card subtitle"
        },
        "value": {
          "type": "object",
          "properties": {
            "path": {
              "oneOf": [
                { "type": "string" },
                { "$ref": "#/$defs/dataBinding" }
              ]
            },
            "format": { "$ref": "#/$defs/fieldFormat" }
          },
          "description": "Card value/amount"
        },
        "badge": {
          "type": "object",
          "properties": {
            "path": {
              "oneOf": [
                { "type": "string" },
                { "$ref": "#/$defs/dataBinding" }
              ]
            },
            "colorMap": {
              "type": "object",
              "additionalProperties": { "type": "string" }
            }
          },
          "description": "Card badge/status"
        },
        "avatar": {
          "oneOf": [
            { "type": "string" },
            { "$ref": "#/$defs/dataBinding" }
          ],
          "description": "Card avatar"
        },
        "fields": {
          "type": "array",
          "items": { "$ref": "#/$defs/widgetField" }
        },
        "actions": {
          "type": "array",
          "items": { "$ref": "#/$defs/widgetAction" }
        }
      },
      "description": "Card display template"
    },
    "draggable": {
      "type": "boolean",
      "default": true,
      "description": "Enable drag-and-drop"
    },
    "onDrop": {
      "type": "string",
      "description": "Handler for card drop events"
    },
    "dropRules": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["from", "to"],
        "properties": {
          "from": { "type": "string" },
          "to": {
            "type": "array",
            "items": { "type": "string" }
          },
          "condition": { "$ref": "#/$defs/conditionRule" }
        }
      },
      "description": "Column drop restrictions"
    },
    "searchable": {
      "type": "boolean",
      "default": false,
      "description": "Enable search/filter"
    },
    "searchFields": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Fields to include in search"
    },
    "fields": {
      "type": "array",
      "items": { "$ref": "#/$defs/widgetField" }
    },
    "actions": {
      "type": "array",
      "items": { "$ref": "#/$defs/widgetAction" }
    },
    "conditions": { "$ref": "#/$defs/condition" },
    "styling": { "$ref": "#/$defs/styleHints" },
    "responsive": { "$ref": "#/$defs/responsiveHints" },
    "accessibility": { "$ref": "#/$defs/accessibilityHints" }
  },
  "$defs": {
    "dataBinding": {
      "type": "object",
      "required": ["path"],
      "properties": {
        "path": { "type": "string" },
        "fallback": { "oneOf": [{ "type": "string" }, { "type": "number" }, { "type": "boolean" }] },
        "transform": { "type": "string", "enum": ["uppercase", "lowercase", "capitalize", "truncate", "format_currency", "format_date", "format_number"] }
      }
    },
    "fieldFormat": {
      "type": "string",
      "enum": ["text", "number", "currency", "percentage", "date", "datetime", "email", "phone", "url", "badge", "progress", "trend", "avatar", "icon", "color", "json", "markdown", "html", "file", "image", "signature", "hash"]
    },
    "widgetField": {
      "type": "object",
      "required": ["id", "label", "binding", "format"],
      "properties": {
        "id": { "type": "string" },
        "label": { "type": "string" },
        "binding": { "oneOf": [{ "type": "string" }, { "$ref": "#/$defs/dataBinding" }] },
        "format": { "$ref": "#/$defs/fieldFormat" },
        "conditions": { "$ref": "#/$defs/condition" },
        "accessibility": { "$ref": "#/$defs/accessibilityHints" },
        "responsive": { "$ref": "#/$defs/responsiveHints" },
        "styling": { "$ref": "#/$defs/styleHints" }
      }
    },
    "widgetAction": {
      "type": "object",
      "required": ["id", "label", "type", "handler"],
      "properties": {
        "id": { "type": "string" },
        "label": { "type": "string" },
        "type": { "type": "string", "enum": ["primary", "secondary", "danger", "success", "warning", "ghost", "link"] },
        "icon": { "type": "string" },
        "handler": { "type": "string" },
        "params": { "type": "object" },
        "confirm": { "type": "object" },
        "conditions": { "$ref": "#/$defs/condition" },
        "accessibility": { "$ref": "#/$defs/accessibilityHints" },
        "styling": { "$ref": "#/$defs/styleHints" }
      }
    },
    "conditionRule": {
      "type": "object",
      "required": ["field", "operator"],
      "properties": {
        "field": { "type": "string" },
        "operator": { "type": "string", "enum": ["eq", "neq", "gt", "gte", "lt", "lte", "contains", "not_contains", "in", "not_in", "exists", "not_exists", "matches"] },
        "value": {},
        "logic": { "type": "string", "enum": ["and", "or"] }
      }
    },
    "condition": {
      "type": "object",
      "properties": {
        "show": { "type": "array", "items": { "$ref": "#/$defs/conditionRule" } },
        "hide": { "type": "array", "items": { "$ref": "#/$defs/conditionRule" } },
        "enable": { "type": "array", "items": { "$ref": "#/$defs/conditionRule" } },
        "disable": { "type": "array", "items": { "$ref": "#/$defs/conditionRule" } }
      }
    },
    "accessibilityHints": {
      "type": "object",
      "properties": {
        "ariaLabel": { "type": "string" },
        "ariaDescription": { "type": "string" },
        "role": { "type": "string" },
        "tabIndex": { "type": "integer" },
        "shortcut": { "type": "string" },
        "ariaLive": { "type": "string", "enum": ["polite", "assertive", "off"] }
      }
    },
    "responsiveHints": {
      "type": "object",
      "properties": {
        "hideOn": { "type": "array", "items": { "type": "string" } },
        "showOn": { "type": "array", "items": { "type": "string" } },
        "columns": { "type": "object" },
        "stack": { "type": "object" }
      }
    },
    "styleHints": {
      "type": "object",
      "properties": {
        "urgency": { "type": "string", "enum": ["critical", "high", "medium", "low", "info"] },
        "variant": { "type": "string", "enum": ["default", "outlined", "filled", "ghost"] },
        "size": { "type": "string", "enum": ["xs", "sm", "md", "lg", "xl"] },
        "className": { "type": "string" },
        "style": { "type": "object" },
        "animation": { "type": "string", "enum": ["none", "fade", "slide", "scale", "pulse"] }
      }
    }
  },
  "examples": [
    {
      "type": "pipeline_board",
      "schemaVersion": "1.0.0",
      "title": "Sales Pipeline",
      "columns": [
        {
          "id": "prospecting",
          "title": "Prospecting",
          "items": "{{pipeline.prospecting}}",
          "aggregate": { "path": "{{pipeline.prospectingTotal}}", "format": "currency", "label": "Total" }
        },
        {
          "id": "qualification",
          "title": "Qualification",
          "items": "{{pipeline.qualification}}",
          "aggregate": { "path": "{{pipeline.qualificationTotal}}", "format": "currency" }
        },
        {
          "id": "proposal",
          "title": "Proposal",
          "items": "{{pipeline.proposal}}",
          "aggregate": { "path": "{{pipeline.proposalTotal}}", "format": "currency" }
        },
        {
          "id": "negotiation",
          "title": "Negotiation",
          "items": "{{pipeline.negotiation}}",
          "aggregate": { "path": "{{pipeline.negotiationTotal}}", "format": "currency" }
        },
        {
          "id": "closed_won",
          "title": "Closed Won",
          "items": "{{pipeline.closedWon}}",
          "styling": { "urgency": "info" }
        }
      ],
      "cardTemplate": {
        "title": "{{item.company}}",
        "subtitle": "{{item.contactName}}",
        "value": { "path": "{{item.dealValue}}", "format": "currency" },
        "badge": { "path": "{{item.priority}}", "colorMap": { "high": "red", "medium": "yellow", "low": "green" } },
        "avatar": "{{item.ownerAvatar}}",
        "actions": [
          { "id": "view", "label": "View", "type": "ghost", "icon": "eye", "handler": "viewLead" },
          { "id": "move", "label": "Move", "type": "ghost", "icon": "arrow-right", "handler": "moveLead" }
        ]
      },
      "draggable": true,
      "onDrop": "updateLeadStage",
      "searchable": true,
      "searchFields": ["company", "contactName", "ownerName"],
      "accessibility": {
        "ariaLabel": "Sales pipeline board with {{pipeline.totalDeals}} deals",
        "role": "application"
      }
    }
  ]
}
