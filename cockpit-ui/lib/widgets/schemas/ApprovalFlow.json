{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://qontrek.io/schemas/widgets/approval-flow.json",
  "title": "Approval Flow Widget Schema",
  "description": "Multi-step approval workflow visualization for ChatGPT Apps",
  "type": "object",
  "required": ["type", "schemaVersion", "title", "steps", "currentStep", "layout"],
  "properties": {
    "type": {
      "const": "approval_flow",
      "description": "Widget type identifier"
    },
    "schemaVersion": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "default": "1.0.0"
    },
    "title": {
      "type": "string",
      "description": "Widget title"
    },
    "subtitle": {
      "type": "string"
    },
    "steps": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "name", "status"],
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique step identifier"
          },
          "name": {
            "type": "string",
            "description": "Step display name"
          },
          "status": {
            "oneOf": [
              { "type": "string" },
              { "$ref": "#/$defs/dataBinding" }
            ],
            "description": "Step status (pending, approved, rejected, skipped)"
          },
          "approver": {
            "type": "object",
            "properties": {
              "name": {
                "oneOf": [
                  { "type": "string" },
                  { "$ref": "#/$defs/dataBinding" }
                ]
              },
              "avatar": {
                "oneOf": [
                  { "type": "string" },
                  { "$ref": "#/$defs/dataBinding" }
                ]
              },
              "role": {
                "oneOf": [
                  { "type": "string" },
                  { "$ref": "#/$defs/dataBinding" }
                ]
              }
            },
            "description": "Approver information"
          },
          "timestamp": {
            "oneOf": [
              { "type": "string" },
              { "$ref": "#/$defs/dataBinding" }
            ],
            "description": "Approval/rejection timestamp"
          },
          "comments": {
            "oneOf": [
              { "type": "string" },
              { "$ref": "#/$defs/dataBinding" }
            ],
            "description": "Approval comments"
          },
          "requiredApprovals": {
            "type": "integer",
            "minimum": 1,
            "description": "Required approval count"
          },
          "currentApprovals": {
            "oneOf": [
              { "type": "string" },
              { "$ref": "#/$defs/dataBinding" }
            ],
            "description": "Current approval count"
          },
          "actions": {
            "type": "array",
            "items": { "$ref": "#/$defs/widgetAction" }
          },
          "conditions": { "$ref": "#/$defs/condition" }
        }
      },
      "description": "Approval workflow steps"
    },
    "currentStep": {
      "oneOf": [
        { "type": "integer" },
        { "type": "string" },
        { "$ref": "#/$defs/dataBinding" }
      ],
      "description": "Current active step"
    },
    "layout": {
      "type": "string",
      "enum": ["horizontal", "vertical"],
      "default": "horizontal",
      "description": "Flow display layout"
    },
    "showConnectors": {
      "type": "boolean",
      "default": true,
      "description": "Show step connector lines"
    },
    "navigable": {
      "type": "boolean",
      "default": false,
      "description": "Allow step navigation"
    },
    "globalActions": {
      "type": "array",
      "items": { "$ref": "#/$defs/widgetAction" },
      "description": "Global approval actions"
    },
    "submission": {
      "type": "object",
      "properties": {
        "submittedBy": {
          "oneOf": [
            { "type": "string" },
            { "$ref": "#/$defs/dataBinding" }
          ]
        },
        "submittedAt": {
          "oneOf": [
            { "type": "string" },
            { "$ref": "#/$defs/dataBinding" }
          ]
        },
        "title": {
          "oneOf": [
            { "type": "string" },
            { "$ref": "#/$defs/dataBinding" }
          ]
        }
      },
      "description": "Submission information"
    },
    "fields": {
      "type": "array",
      "items": { "$ref": "#/$defs/widgetField" }
    },
    "actions": {
      "type": "array",
      "items": { "$ref": "#/$defs/widgetAction" }
    },
    "conditions": { "$ref": "#/$defs/condition" },
    "styling": { "$ref": "#/$defs/styleHints" },
    "responsive": { "$ref": "#/$defs/responsiveHints" },
    "accessibility": { "$ref": "#/$defs/accessibilityHints" }
  },
  "$defs": {
    "dataBinding": {
      "type": "object",
      "required": ["path"],
      "properties": {
        "path": { "type": "string" },
        "fallback": { "oneOf": [{ "type": "string" }, { "type": "number" }, { "type": "boolean" }] },
        "transform": { "type": "string", "enum": ["uppercase", "lowercase", "capitalize", "truncate", "format_currency", "format_date", "format_number"] }
      }
    },
    "fieldFormat": {
      "type": "string",
      "enum": ["text", "number", "currency", "percentage", "date", "datetime", "email", "phone", "url", "badge", "progress", "trend", "avatar", "icon", "color", "json", "markdown", "html", "file", "image", "signature", "hash"]
    },
    "widgetField": {
      "type": "object",
      "required": ["id", "label", "binding", "format"],
      "properties": {
        "id": { "type": "string" },
        "label": { "type": "string" },
        "binding": { "oneOf": [{ "type": "string" }, { "$ref": "#/$defs/dataBinding" }] },
        "format": { "$ref": "#/$defs/fieldFormat" },
        "conditions": { "$ref": "#/$defs/condition" },
        "accessibility": { "$ref": "#/$defs/accessibilityHints" },
        "responsive": { "$ref": "#/$defs/responsiveHints" },
        "styling": { "$ref": "#/$defs/styleHints" }
      }
    },
    "widgetAction": {
      "type": "object",
      "required": ["id", "label", "type", "handler"],
      "properties": {
        "id": { "type": "string" },
        "label": { "type": "string" },
        "type": { "type": "string", "enum": ["primary", "secondary", "danger", "success", "warning", "ghost", "link"] },
        "icon": { "type": "string" },
        "handler": { "type": "string" },
        "params": { "type": "object" },
        "confirm": {
          "type": "object",
          "properties": {
            "title": { "type": "string" },
            "message": { "type": "string" },
            "confirmLabel": { "type": "string" },
            "cancelLabel": { "type": "string" }
          }
        },
        "conditions": { "$ref": "#/$defs/condition" },
        "accessibility": { "$ref": "#/$defs/accessibilityHints" },
        "styling": { "$ref": "#/$defs/styleHints" }
      }
    },
    "conditionRule": {
      "type": "object",
      "required": ["field", "operator"],
      "properties": {
        "field": { "type": "string" },
        "operator": { "type": "string", "enum": ["eq", "neq", "gt", "gte", "lt", "lte", "contains", "not_contains", "in", "not_in", "exists", "not_exists", "matches"] },
        "value": {},
        "logic": { "type": "string", "enum": ["and", "or"] }
      }
    },
    "condition": {
      "type": "object",
      "properties": {
        "show": { "type": "array", "items": { "$ref": "#/$defs/conditionRule" } },
        "hide": { "type": "array", "items": { "$ref": "#/$defs/conditionRule" } },
        "enable": { "type": "array", "items": { "$ref": "#/$defs/conditionRule" } },
        "disable": { "type": "array", "items": { "$ref": "#/$defs/conditionRule" } }
      }
    },
    "accessibilityHints": {
      "type": "object",
      "properties": {
        "ariaLabel": { "type": "string" },
        "ariaDescription": { "type": "string" },
        "role": { "type": "string" },
        "tabIndex": { "type": "integer" },
        "shortcut": { "type": "string" },
        "ariaLive": { "type": "string", "enum": ["polite", "assertive", "off"] }
      }
    },
    "responsiveHints": {
      "type": "object",
      "properties": {
        "hideOn": { "type": "array", "items": { "type": "string" } },
        "showOn": { "type": "array", "items": { "type": "string" } },
        "columns": { "type": "object" },
        "stack": { "type": "object" }
      }
    },
    "styleHints": {
      "type": "object",
      "properties": {
        "urgency": { "type": "string", "enum": ["critical", "high", "medium", "low", "info"] },
        "variant": { "type": "string", "enum": ["default", "outlined", "filled", "ghost"] },
        "size": { "type": "string", "enum": ["xs", "sm", "md", "lg", "xl"] },
        "className": { "type": "string" },
        "style": { "type": "object" },
        "animation": { "type": "string", "enum": ["none", "fade", "slide", "scale", "pulse"] }
      }
    }
  },
  "examples": [
    {
      "type": "approval_flow",
      "schemaVersion": "1.0.0",
      "title": "Contract Approval",
      "layout": "horizontal",
      "showConnectors": true,
      "submission": {
        "submittedBy": "{{approval.submitter.name}}",
        "submittedAt": "{{approval.submittedAt}}",
        "title": "{{approval.contract.title}}"
      },
      "currentStep": "{{approval.currentStepIndex}}",
      "steps": [
        {
          "id": "legal_review",
          "name": "Legal Review",
          "status": "{{approval.steps.legal.status}}",
          "approver": {
            "name": "{{approval.steps.legal.approver.name}}",
            "avatar": "{{approval.steps.legal.approver.avatar}}",
            "role": "Legal Counsel"
          },
          "timestamp": "{{approval.steps.legal.timestamp}}",
          "comments": "{{approval.steps.legal.comments}}",
          "actions": [
            { "id": "approve", "label": "Approve", "type": "success", "icon": "check", "handler": "approveStep", "conditions": { "show": [{ "field": "approval.steps.legal.status", "operator": "eq", "value": "pending" }] } },
            { "id": "reject", "label": "Reject", "type": "danger", "icon": "x", "handler": "rejectStep", "confirm": { "title": "Reject Step?", "message": "Please provide a reason for rejection." } }
          ]
        },
        {
          "id": "finance_review",
          "name": "Finance Review",
          "status": "{{approval.steps.finance.status}}",
          "approver": {
            "name": "{{approval.steps.finance.approver.name}}",
            "role": "CFO"
          },
          "requiredApprovals": 2,
          "currentApprovals": "{{approval.steps.finance.approvalCount}}"
        },
        {
          "id": "executive_approval",
          "name": "Executive Approval",
          "status": "{{approval.steps.executive.status}}",
          "approver": {
            "name": "{{approval.steps.executive.approver.name}}",
            "role": "CEO"
          }
        },
        {
          "id": "final_sign",
          "name": "Final Signature",
          "status": "{{approval.steps.final.status}}"
        }
      ],
      "globalActions": [
        { "id": "recall", "label": "Recall Request", "type": "warning", "icon": "rotate-ccw", "handler": "recallApproval", "conditions": { "show": [{ "field": "approval.status", "operator": "neq", "value": "completed" }] } },
        { "id": "escalate", "label": "Escalate", "type": "ghost", "icon": "arrow-up", "handler": "escalateApproval" }
      ],
      "accessibility": {
        "ariaLabel": "Contract approval workflow - currently at step {{approval.currentStepIndex}} of {{approval.totalSteps}}",
        "role": "navigation"
      },
      "responsive": {
        "stack": {
          "mobile": "vertical",
          "tablet": "horizontal"
        }
      }
    }
  ]
}
