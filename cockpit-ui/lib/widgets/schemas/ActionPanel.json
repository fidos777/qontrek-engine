{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://qontrek.io/schemas/widgets/action-panel.json",
  "title": "Action Panel Widget Schema",
  "description": "Contextual action buttons grouped by function for ChatGPT Apps",
  "type": "object",
  "required": ["type", "schemaVersion", "title", "layout", "groups"],
  "properties": {
    "type": {
      "const": "action_panel",
      "description": "Widget type identifier"
    },
    "schemaVersion": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "default": "1.0.0"
    },
    "title": {
      "type": "string",
      "description": "Widget title"
    },
    "subtitle": {
      "type": "string"
    },
    "layout": {
      "type": "string",
      "enum": ["horizontal", "vertical", "grid"],
      "default": "horizontal",
      "description": "Layout of action groups"
    },
    "groups": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "actions"],
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique group identifier"
          },
          "title": {
            "type": "string",
            "description": "Group title"
          },
          "actions": {
            "type": "array",
            "items": { "$ref": "#/$defs/widgetAction" }
          },
          "layout": {
            "type": "string",
            "enum": ["horizontal", "vertical", "grid"],
            "description": "Layout within group"
          },
          "conditions": { "$ref": "#/$defs/condition" }
        }
      },
      "description": "Action groups"
    },
    "showDividers": {
      "type": "boolean",
      "default": true,
      "description": "Show dividers between groups"
    },
    "context": {
      "type": "object",
      "properties": {
        "title": {
          "oneOf": [
            { "type": "string" },
            { "$ref": "#/$defs/dataBinding" }
          ],
          "description": "Context display title"
        },
        "subtitle": {
          "oneOf": [
            { "type": "string" },
            { "$ref": "#/$defs/dataBinding" }
          ]
        },
        "icon": { "type": "string" }
      },
      "description": "Current selection context display"
    },
    "fields": {
      "type": "array",
      "items": { "$ref": "#/$defs/widgetField" }
    },
    "actions": {
      "type": "array",
      "items": { "$ref": "#/$defs/widgetAction" }
    },
    "conditions": { "$ref": "#/$defs/condition" },
    "styling": { "$ref": "#/$defs/styleHints" },
    "responsive": { "$ref": "#/$defs/responsiveHints" },
    "accessibility": { "$ref": "#/$defs/accessibilityHints" }
  },
  "$defs": {
    "dataBinding": {
      "type": "object",
      "required": ["path"],
      "properties": {
        "path": { "type": "string" },
        "fallback": { "oneOf": [{ "type": "string" }, { "type": "number" }, { "type": "boolean" }] },
        "transform": { "type": "string", "enum": ["uppercase", "lowercase", "capitalize", "truncate", "format_currency", "format_date", "format_number"] }
      }
    },
    "fieldFormat": {
      "type": "string",
      "enum": ["text", "number", "currency", "percentage", "date", "datetime", "email", "phone", "url", "badge", "progress", "trend", "avatar", "icon", "color", "json", "markdown", "html", "file", "image", "signature", "hash"]
    },
    "widgetField": {
      "type": "object",
      "required": ["id", "label", "binding", "format"],
      "properties": {
        "id": { "type": "string" },
        "label": { "type": "string" },
        "binding": { "oneOf": [{ "type": "string" }, { "$ref": "#/$defs/dataBinding" }] },
        "format": { "$ref": "#/$defs/fieldFormat" },
        "conditions": { "$ref": "#/$defs/condition" },
        "accessibility": { "$ref": "#/$defs/accessibilityHints" },
        "responsive": { "$ref": "#/$defs/responsiveHints" },
        "styling": { "$ref": "#/$defs/styleHints" }
      }
    },
    "widgetAction": {
      "type": "object",
      "required": ["id", "label", "type", "handler"],
      "properties": {
        "id": { "type": "string" },
        "label": { "type": "string" },
        "type": { "type": "string", "enum": ["primary", "secondary", "danger", "success", "warning", "ghost", "link"] },
        "icon": { "type": "string" },
        "handler": { "type": "string" },
        "params": { "type": "object", "additionalProperties": true },
        "confirm": {
          "type": "object",
          "properties": {
            "title": { "type": "string" },
            "message": { "type": "string" },
            "confirmLabel": { "type": "string" },
            "cancelLabel": { "type": "string" }
          }
        },
        "loadingLabel": { "type": "string" },
        "successMessage": { "type": "string" },
        "errorMessage": { "type": "string" },
        "conditions": { "$ref": "#/$defs/condition" },
        "accessibility": { "$ref": "#/$defs/accessibilityHints" },
        "styling": { "$ref": "#/$defs/styleHints" },
        "shortcut": { "type": "string" }
      }
    },
    "conditionRule": {
      "type": "object",
      "required": ["field", "operator"],
      "properties": {
        "field": { "type": "string" },
        "operator": { "type": "string", "enum": ["eq", "neq", "gt", "gte", "lt", "lte", "contains", "not_contains", "in", "not_in", "exists", "not_exists", "matches"] },
        "value": {},
        "logic": { "type": "string", "enum": ["and", "or"] }
      }
    },
    "condition": {
      "type": "object",
      "properties": {
        "show": { "type": "array", "items": { "$ref": "#/$defs/conditionRule" } },
        "hide": { "type": "array", "items": { "$ref": "#/$defs/conditionRule" } },
        "enable": { "type": "array", "items": { "$ref": "#/$defs/conditionRule" } },
        "disable": { "type": "array", "items": { "$ref": "#/$defs/conditionRule" } }
      }
    },
    "accessibilityHints": {
      "type": "object",
      "properties": {
        "ariaLabel": { "type": "string" },
        "ariaDescription": { "type": "string" },
        "role": { "type": "string" },
        "tabIndex": { "type": "integer" },
        "shortcut": { "type": "string" },
        "ariaLive": { "type": "string", "enum": ["polite", "assertive", "off"] }
      }
    },
    "responsiveHints": {
      "type": "object",
      "properties": {
        "hideOn": { "type": "array", "items": { "type": "string" } },
        "showOn": { "type": "array", "items": { "type": "string" } },
        "columns": { "type": "object" },
        "stack": { "type": "object" }
      }
    },
    "styleHints": {
      "type": "object",
      "properties": {
        "urgency": { "type": "string", "enum": ["critical", "high", "medium", "low", "info"] },
        "variant": { "type": "string", "enum": ["default", "outlined", "filled", "ghost"] },
        "size": { "type": "string", "enum": ["xs", "sm", "md", "lg", "xl"] },
        "className": { "type": "string" },
        "style": { "type": "object" },
        "animation": { "type": "string", "enum": ["none", "fade", "slide", "scale", "pulse"] }
      }
    }
  },
  "examples": [
    {
      "type": "action_panel",
      "schemaVersion": "1.0.0",
      "title": "Lead Actions",
      "layout": "horizontal",
      "context": {
        "title": "{{selection.lead.name}}",
        "subtitle": "{{selection.lead.company}}",
        "icon": "user"
      },
      "groups": [
        {
          "id": "communication",
          "title": "Communication",
          "layout": "horizontal",
          "actions": [
            { "id": "call", "label": "Call", "type": "primary", "icon": "phone", "handler": "initiateCall", "shortcut": "C" },
            { "id": "email", "label": "Email", "type": "secondary", "icon": "mail", "handler": "composeEmail", "shortcut": "E" },
            { "id": "message", "label": "Message", "type": "secondary", "icon": "message-circle", "handler": "sendMessage", "shortcut": "M" }
          ]
        },
        {
          "id": "workflow",
          "title": "Workflow",
          "layout": "horizontal",
          "actions": [
            { "id": "qualify", "label": "Qualify", "type": "success", "icon": "check-circle", "handler": "qualifyLead" },
            { "id": "schedule", "label": "Schedule Meeting", "type": "ghost", "icon": "calendar", "handler": "scheduleMeeting" },
            { "id": "assign", "label": "Assign", "type": "ghost", "icon": "user-plus", "handler": "assignLead" }
          ]
        },
        {
          "id": "danger",
          "title": "Other",
          "layout": "horizontal",
          "actions": [
            {
              "id": "disqualify",
              "label": "Disqualify",
              "type": "danger",
              "icon": "x-circle",
              "handler": "disqualifyLead",
              "confirm": {
                "title": "Disqualify Lead?",
                "message": "This will remove the lead from your active pipeline.",
                "confirmLabel": "Disqualify",
                "cancelLabel": "Cancel"
              }
            }
          ]
        }
      ],
      "showDividers": true,
      "accessibility": {
        "ariaLabel": "Actions for lead {{selection.lead.name}}",
        "role": "toolbar"
      },
      "responsive": {
        "stack": {
          "mobile": "vertical",
          "tablet": "horizontal",
          "desktop": "horizontal"
        }
      }
    }
  ]
}
