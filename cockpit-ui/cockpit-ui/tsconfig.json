{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["DOM", "ES2022"],
    "jsx": "react-jsx",

    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,

    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },

    "types": []   // keep empty to avoid dragging vitest/node from parent
  },
  "include": [
    "components/**/*",
    "lib/**/*",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "../**",      // <-- hard stop crawling the parent project
    "node_modules",
    ".next",
    "dist",
    "build",
    "**/*.test.ts",
    "**/*.test.tsx"
  ]
}
